<div class="actuality mx-auto" id="actuality">
    <h2 class="text-primary text-center"><strong>{{'_include._actuality.h2'|trans}}</strong></h2>
    <p class="text-center"><strong>{{'_include._actuality.p.1'|trans}}</strong></p>
    {{ form_start(form, {'action': path('contact_actualityTreatment')}) }}
    <div class="d-flex justify-content-between field-container flex-md-row flex-column">
        <div class="d-flex flex-column">
            {{ form_label(form.firstName, '_include._actuality.firstName'|trans) }}
            {{ form_widget(form.firstName) }}
            {{ form_errors(form.firstName) }}
        </div>
        <div class="d-flex flex-column">
            {{ form_label(form.email, '_include._actuality.email'|trans) }}
            {{ form_widget(form.email) }}
            {{ form_errors(form.email) }}
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn btn-secondary text-white mt-4 py-2 px-4">{{ button_label|default('_include._actuality.button'|trans) }}</button>
    </div>
    <p class="text-center mt-3"><strong>{{'_include._actuality.subscribe'|trans}}</strong></p>
    {% for message in app.flashes('actualitySent') %}
        <p class="text-center">{{'_include._actuality.sent'|trans}}</p>
    {% endfor %}
    {{ form_end(form) }}
</div>