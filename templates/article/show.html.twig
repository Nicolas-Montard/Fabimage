{% extends 'base.html.twig' %}

{% block title %}{{ 'article.show.title'|trans }}{% endblock %}

{% block body %}
<div class="article-show">
    <div class="d-flex justify-content-center flex-column align-items-center">
        <h1 class="fs-1 mt-5">
            {% if app.request.locale == 'fr' %}
                {{ article.titleFr }}
            {% elseif app.request.locale == 'es' %}
                {{ article.titleEs }}
            {% else %}
                {{ article.titleEt }}
            {% endif %}
        </h1>
    </div>
    <div class="description mx-auto mt-3 mt-md-5">
        <p class="">
            {% if app.request.locale == 'fr' %}
                {{ article.contentFr|raw }}
            {% elseif app.request.locale == 'es' %}
                {{ article.contentEs|raw }}
            {% else %}
                {{ article.contentEt|raw }}
            {% endif %}
        </p>
    </div>
    <div class="d-flex justify-content-center mt-4">
        {% if app.user %}
            <a href="{{ path('app_article_edit', {id: article.id}) }}" class=""><button class="btn btn-secondary text-white">Mettre a jour</button></a>
        {% endif %}
    </div>
</div>
{% endblock %}
