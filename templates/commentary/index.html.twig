{% extends 'base.html.twig' %}

{% block title %}Commentary index{% endblock %}

{% block body %}
    <div class="commentary-index">
        {% for commentary in workshop.commentaries %}
            <div class="d-flex justify-content-center align-items-center flex-column commentary bg-secondary mt-5">
                <p class="text text-white">
                    {% if app.request.locale == 'fr' %}
                        {{ commentary.contentFr|raw }}
                    {% elseif app.request.locale == 'es' %}
                        {{ commentary.contentEs|raw }}
                    {% else %}
                        {{ commentary.contentEt|raw }}
                    {% endif %}
                </p>
                <p class="text-center text-white">{{ commentary.author|raw }}</p>
            </div>
            <div class="d-flex justify-content-center mt-3">
                <a href="{{ path('app_commentary_edit', {id: commentary.id}) }}">
                    <button class="btn btn-primary rounded text-white">Mettre Ã  jour</button>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
