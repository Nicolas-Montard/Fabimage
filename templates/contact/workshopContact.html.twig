{% extends 'base.html.twig' %}

{% block title %}{{ 'contact.contactMe'|trans }}{% endblock %}

{% block body %}
    <div class="contact-workshop">
        <div class="title-container mx-auto">
            <h1 class="text-center text-primary mb-5 fs-2">{{ 'contact.workshop.title'|trans|raw }}</h1>
        </div>
        <div class="mx-auto form-container">
            <p>{{ 'contact.workshop.undertitle'|trans|raw }}</p>
            {{ form_start(form) }}
            <div class="d-flex flex-column mt-4">
                <p class="mb-1">{{ 'contact.workshop.form.workshop'|trans|raw }}</p>
                {{ form_widget(form.workshop) }}
                {{ form_errors(form.workshop) }}
            </div>
            <div class="d-flex flex-column mt-4">
                {{ form_label(form.firstName, 'contact.form.firstName'|trans) }}
                {{ form_widget(form.firstName) }}
                {{ form_errors(form.firstName) }}
            </div>
            <div class="d-flex flex-column mt-3">
                {{ form_label(form.lastName, 'contact.form.lastName'|trans) }}
                {{ form_widget(form.lastName) }}
                {{ form_errors(form.lastName) }}
            </div>
            <div class="d-flex flex-column mt-3">
                {{ form_label(form.email, 'emailFr') }}
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="d-flex flex-column mt-3">
                {{ form_label(form.phoneNumber, 'contact.form.phoneNumber'|trans) }}
                {{ form_widget(form.phoneNumber) }}
                {{ form_errors(form.phoneNumber) }}
            </div>
            <div class="d-flex flex-column mt-3">
                {{ form_label(form.comingWithFriend) }}
                <p class="mb-0 mt-0"><small><i>{{ 'contact.form.phoneNumber.afterComingWithFriend'|trans }}</i></small></p>
                {{ form_widget(form.comingWithFriend) }}
                {{ form_errors(form.comingWithFriend) }}
            </div>
            <div class="d-flex flex-column mt-3">
                {{ form_label(form.informed, 'contact.workshop.form.informed'|trans) }}
                {{ form_widget(form.informed) }}
                {{ form_errors(form.informed) }}
            </div>
            <div class="d-flex flex-column mt-3">
                {{ form_label(form.message, 'contact.workshop.form.message'|trans) }}
                {{ form_widget(form.message) }}
                {{ form_errors(form.message) }}
            </div>
            <p class="fst-italic"><small>{{ 'contact.workshop.commentary.info'|trans }}</small></p>
            <p class="mb-0"><small>{{ 'contact.workshop.form.agreements.info'|trans|raw }}</small></p>
            <div class="d-flex mt-3">
                {{ form_widget(form.agreements) }}
                {{ form_label(form.agreements, 'contact.workshop.form.agreements'|trans) }}
                {{ form_errors(form.agreements) }}
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-secondary text-white mt-4 fs-5 px-4">{{ 'contact.workshop.form.send'|trans }}r</button>
            </div>
            {{ form_end(form) }}
        </div>
        {% if app.request.get('formSent') %}
            <p class="form-confirmation mx-auto my-3">
                {{ 'contact.workshop.validation'|trans|raw }}
            </p>
        {% endif %}
    </div>

{% endblock %}