{{ form_start(form) }}
<div class="d-flex justify-content-around">
    <div class="d-flex flex-column mt-4">
        {{ form_label(form.subjectFr, 'Sujet Français') }}
        {{ form_widget(form.subjectFr) }}
        {{ form_errors(form.subjectFr) }}
    </div>
    <div class="d-flex flex-column mt-4">
        {{ form_label(form.subjectEs, 'Sujet Espagnol') }}
        {{ form_widget(form.subjectEs) }}
        {{ form_errors(form.subjectEs) }}
    </div>
    <div class="d-flex flex-column mt-4">
        {{ form_label(form.subjectEt, 'Sujet Estonien') }}
        {{ form_widget(form.subjectEt) }}
        {{ form_errors(form.subjectEt) }}
    </div>
</div>
<div class="d-flex justify content-center sendAfter-container">
    <div class="mx-auto mt-3">
        {{ form_label(form.sendAfter, 'Envoyé après :') }}
        <div class="widget d-flex flex-row">
            {{ form_widget(form.sendAfter) }}
                <p class="mb-0 ms-2 sendAfter-days">jours</p>
        </div>
        {{ form_errors(form.sendAfter) }}
    </div>
</div>
<div class="d-flex justify-content-center">
    <div class="d-flex flex-column mt-4">
        {{ form_label(form.contentFr, 'Email français') }}
        {{ form_widget(form.contentFr) }}
    </div>
</div>
<div class="d-flex justify-content-center">
    <div class="d-flex flex-column mt-4">
        {{ form_label(form.contentEs, 'Email espagnol') }}
        {{ form_widget(form.contentEs) }}
    </div>
</div>
<div class="d-flex justify-content-center">
    <div class="d-flex flex-column mt-4">
        {{ form_label(form.contentEt, 'Email estonien') }}
        {{ form_widget(form.contentEt) }}
    </div>
</div>
<div class="mt-4 d-flex justify-content-center">
    <button class="btn btn-secondary text-white">{{ button_label|default('Sauvegarder') }}</button>
</div>
{{ form_end(form) }}
