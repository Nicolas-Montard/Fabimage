{% extends 'base.html.twig' %}

{% block title %}FollowUpEmail index{% endblock %}

{% block body %}
<div class="followUpEmail-index">
    {% for email in book.followUpEmails %}
        <div class="d-flex justify-content-center mt-5">
            <p class="text">
                {% if app.request.locale == 'fr' %}
                    {{ email.subjectFr|raw }}
                {% elseif app.request.locale == 'es' %}
                    {{ email.subjectEs|raw }}
                {% else %}
                    {{ email.subjectEt|raw }}
                {% endif %}
            </p>
        </div>
        <div class="d-flex justify-content-center mt-3">
            <a href="{{ path('app_follow_up_email_edit', {id: email.id}) }}">
                <button class="btn btn-secondary rounded text-white">Mettre Ã  jour</button>
            </a>
        </div>
    {% endfor %}
</div>
{% endblock %}
