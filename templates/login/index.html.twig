{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    <div class="loginForm">
        <h1 class="text-primary">Se connecter</h1>
        <form action="{{ path('app_login') }}" method="post" class="mx-auto mt-3">
            <div class="form-floating">
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="john@doe.fr">
                <label for="username">emailFr</label>
            </div>

            <div class="form-floating mt-4">
                <input type="password" class="form-control" id="password" name="_password" placeholder="password">
                <label for="password">Mot de passe</label>
            </div>
            <p><a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a></p>
            {% if error %}
                <div class="mt-1">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <button class="btn btn-secondary mt-3 mb-2 text-white" type="submit">Se connecter</button>
        </form>
    </div>
{% endblock %}
