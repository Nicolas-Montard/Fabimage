{% extends 'base.html.twig' %}

{% block title %}{{ 'Fabienne.head.title'|trans }}{% endblock %}
{% block metaDescription %}{{ "Fabienne.head.metaDescription"|trans }}{% endblock %}

{% block body %}
    <div class="fabienne">
        <div class="top-container">
            <div class="title-image-container">
                <img src="{{ asset('build/images/Fabienne-FABIENNE.jpg') }}" alt="" class="w-100 h-100">
            </div>
            <div class="head-text-container mx-auto bg-light">
                <h1 class="text-primary text-center">Fabienne Chmara</h1>
                <p class="text-center">{{ 'fabienne.title.p'|trans|raw }}</p>
            </div>
        </div>
        <div class="container-content mx-auto">
            <div class="container-column d-flex flex-column-reverse flex-md-row justify-content-around">
                <div class="column">
                    <p>{{ 'fabienne.leftColumn.p.1'|trans|raw }}</p>
                    <div class="d-flex justify-content-center">
                        <a href="{{ path("app_service_index") }}"><button class="btn btn-secondary text-white px-4">{{ 'fabienne.Idiscover'|trans }}</button></a>
                    </div>

                </div>
                <div class="column">
                    <img src="{{ asset('build/images/fabienne-1.png') }}" alt="" class="w-100 image-1">
                    <div class="decoration"></div>
                </div>
            </div>
            <div class="d-flex justify-content-around flex-md-row container-row flex-column py-2 bg-white">
                <div class="column">
                    <img src="{{ asset('build/images/fabienne-2.png') }}" alt="" class="w-100 mt-5 image-2">
                </div>
                <div class="column">
                    <img src="{{ asset("build/images/AFIPP.png") }}" alt="" class="w-100 mt-5 mt-md-0 image-AFIPP">
                    <p class="mt-4">{{ 'fabienne.AFIPP'|trans|raw }}</p>
                </div>
            </div>
        </div>
    </div>
    {{ render(controller('App\\Controller\\ContactController::actuality')) }}
{% endblock %}