{% extends 'base.html.twig' %}

{% block title %}Reinitialiser le mot de passe{% endblock %}

{% block body %}
    <div class="reset-password">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <h1 class="text-center text-primary">Réinitialiser votre mot de passe</h1>
        <div class="form-container mx-auto">
            {{ form_start(requestForm) }}
            <div class="d-flex flex-column mt-4">
                {{ form_label(requestForm.email) }}
                {{ form_widget(requestForm.email) }}
            </div>
            <div>
                <small>
                    Entrer votre addresse email et nous vous enverront le lien de réinitialisation
                </small>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <button class="btn btn-secondary rounded text-white mt-4">Réinitialiser mon mot de passe</button>
        </div>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
