{% extends 'base.html.twig' %}

{% block metaDescription %}{{ "workshop.head.metaDescription"|trans }}{% endblock %}
{% block title %}{{ "workshop.head.title"|trans }}{% endblock %}

{% block body %}
    <div class="workshop-index">
        <h1 class="text-center text-primary">{{ 'workshop.index.body.title'|trans }}</h1>
        <div class="container-text mx-auto mt-5">
            <p>{{ 'workshop.index.p.1'|trans|raw }}</p>
        </div>
        {% if app.user %}
            <div class="d-flex justify-content-center mt-5">
                <a href="{{ path('app_workshop_new') }}">
                    <button class="btn btn-secondary text-white">{{'workshop.index.admin.newWorkshop'|trans}}</button>
                </a>
            </div>
        {% endif %}
        <div class="row row-cols-md-3 row-cols-1 workshop-card-container mx-auto mt-5">
            {% for workshop in workshops %}
                <div class="card-workshop pb-5 mt-5">
                    {% include '_include/_card_workshop.html.twig' %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
